@model IEnumerable<LibraryManagement.Models.Author>

@{
    ViewBag.ShowSearchForm = "Author";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            background-color: #121212; /* Dark background color for body */
            color: #e0e0e0; /* Light text color for contrast */
        }

        .card-img-top {
            width: 100%;
            height: 300px; /* Keep the height as is, or adjust if needed */
            object-fit: cover;
            border-radius: 8px 8px 0 0; /* Rounded corners for image */
        }

        .card {
            transition: transform 0.4s, box-shadow 0.4s;
            border-radius: 8px; /* Rounded corners for card */
            box-shadow: 0 4px 8px rgba(0,0,0,0.9); /* Added shadow to the card */
            padding: 15px; /* Padding for better spacing */
            background-color: #1e1e1e; /* Dark background for card */
            color: #e0e0e0; /* Light text color inside card */
        }

            .card:hover {
                transform: scale(1.03); /* Slightly reduced scale on hover */
                box-shadow: 0 8px 16px rgba(0,0,0,0.3); /* Enhanced shadow on hover */
            }

        .btn-outline-warning, .btn-outline-info, .btn-outline-danger {
            border-radius: 20px; /* Rounded corners for buttons */
            border-width: 1px; /* Thinner border */
            padding: 8px 16px; /* Reduced padding */
            font-size: 12px; /* Smaller font size */
            text-transform: uppercase;
            font-weight: 500; /* Slightly lighter font weight */
            letter-spacing: 0.3px; /* Reduced letter spacing */
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-outline-warning {
            border-color: #ffc107;
            color: #ffc107;
        }

            .btn-outline-warning:hover {
                background-color: #ffc107;
                color: white;
            }

        .btn-outline-info {
            border-color: #17a2b8;
            color: #17a2b8;
        }

            .btn-outline-info:hover {
                background-color: #17a2b8;
                color: white;
            }

        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
        }

            .btn-outline-danger:hover {
                background-color: #dc3545;
                color: white;
            }

        .card-title {
            font-size: 1.25rem; /* Adjusted for balance */
            font-weight: 600;
            color: #e0e0e0; /* Light text color */
        }

        .d-flex {
            display: flex;
            gap: 10px; /* Maintain spacing between buttons */
        }

        .container {
            margin-top: 20px;
        }

        .text-center {
            margin-bottom: 20px;
        }

        .btn-primary {
            background: #333;
            border-width: 2px;
            border-color: black;
            
        }

            .btn-primary:hover {
                background: black;
                color: white;
                border-color: black;
            }

        .row {
            background-color: #333; /* White background for the row */
            padding: 20px; /* Add some padding for spacing */
            border-radius: 8px; /* Rounded corners to match the card styling */
            box-shadow: 0 4px 8px black; /* Light shadow for subtle depth */
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Authors List</h1>

        

        <div class="row">
            <p class="text-center">
                <a asp-action="Create" class="btn btn-primary mb-4">Create New Author</a>
            </p>
            @foreach (var author in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/@author.PhotoUrl" class="card-img-top" alt="@author.Name">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => author.Name)</h5>
                            <div class="d-flex">
                                <a asp-action="ShowBooksOfAuthor" asp-route-id="@author.Id" class="btn btn-sm btn-outline-info">Books</a>
                                <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
