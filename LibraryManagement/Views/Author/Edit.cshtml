@model LibraryManagement.Models.Author

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Author - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #121212; /* Dark background color for the page */
            color: #e0e0e0; /* Light text color for better readability */
        }

        .container {
            margin-top: 2rem;
        }

        .card {
            background-color: #1e1e1e; /* Dark background for the card */
            border-color: #333; /* Darker border color */
        }

        .card-header {
            background-color: #fbc02d; /* Yellow for card header */
            color: #000; /* Dark text color for the header */
        }

        .btn-primary {
            background-color: #fbc02d; /* Yellow button color */
            border: none; /* Remove border */
            color: #000; /* Dark text color */
        }

            .btn-primary:hover {
                background-color: #f9a825; /* Darker yellow on hover */
            }

        .btn-secondary {
            background-color: #424242; /* Darker grey for secondary button */
            border: none; /* Remove border */
        }

            .btn-secondary:hover {
                background-color: #616161; /* Lighter grey on hover */
            }

        .text-muted {
            color: #6c757d; /* Muted text color */
        }

        h1, h4 {
            text-align: center; /* Center-align headings */
        }

        .btn {
            border-radius: 0.25rem; /* Rounded corners for buttons */
        }

        .form-group {
            margin-bottom: 1.5rem; /* Space between form elements */
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-center my-4">Edit Author</h1>

        <hr />
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Edit Author</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter author name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <input type="file" id="fileInput" name="Image" class="form-control" placeholder="Upload file" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                                <br />
                                <img id="imagePreview" src="~/@(Model.PhotoUrl)" style="width:150px;" class="img-thumbnail" />
                            </div>
                            <div class="form-group mt-4">
                                <input type="submit" value="Save" class="btn btn-primary btn-block" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        document.getElementById('fileInput').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
