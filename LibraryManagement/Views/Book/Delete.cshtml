@model LibraryManagement.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #121212; /* Dark background color for the page */
            color: #e0e0e0; /* Light text color for better readability */
        }

        .container {
            margin-top: 2rem;
        }

        .card {
            background-color: #1e1e1e; /* Dark background for the card */
            border-color: #333; /* Darker border color */
        }

        .card-header {
            background-color: #c62828; /* Danger red for card header */
            color: #fff; /* Light text color for the header */
        }

        .btn-danger {
            background-color: #c62828; /* Danger red button color */
            border: none; /* Remove border */
        }

        .btn-danger:hover {
            background-color: #b71c1c; /* Darker red on hover */
        }

        .btn-secondary {
            background-color: #424242; /* Darker grey for secondary button */
            border: none; /* Remove border */
        }

        .btn-secondary:hover {
            background-color: #616161; /* Lighter grey on hover */
        }

        .text-danger {
            color: #c62828; /* Danger red text color */
        }
    </style>
</head>
<body>
 
    <div class="container">

        <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Delete Book</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-3 font-weight-bold">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>

                        <form asp-action="ConfirmDelete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            @{
                                if (TempData["BackButton"] is not null && TempData["BackButton"].ToString() == "Author")
                                {
                                    <a asp-action="ShowBooksOfAuthor" asp-controller="Author" asp-route-id="@Model.AuthorId" class="btn btn-secondary">Back</a>
                                }
                                else
                                {
                                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                }
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
