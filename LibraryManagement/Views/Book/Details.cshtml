@model LibraryManagement.Models.Book

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #121212; /* Dark background color for the page */
            color: #e0e0e0; /* Light text color for better readability */
        }

        .container {
            margin-top: 2rem;
        }

        .card {
            background-color: #1e1e1e; /* Dark background for the card */
            border-color: #333; /* Darker border color */
        }

        .card-header {
            background-color: #388e3c; /* Green for card header */
            color: #fff; /* Light text color for the header */
        }

        .btn-primary {
            background-color: #388e3c; /* Green button color */
            border: none; /* Remove border */
        }

            .btn-primary:hover {
                background-color: #2c6b2f; /* Darker green on hover */
            }

        .btn-secondary {
            background-color: #424242; /* Darker grey for secondary button */
            border: none; /* Remove border */
        }

            .btn-secondary:hover {
                background-color: #616161; /* Lighter grey on hover */
            }

        .text-success {
            color: #388e3c; /* Green text color */
        }

        h1, h4 {
            text-align: center; /* Center-align headings */
        }

        .text-center {
            text-align: center;
        }

        .btn {
            border-radius: 0.25rem; /* Rounded corners for buttons */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Book details</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-3 font-weight-bold">
                        Author
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Author.Name)
                    </dd>
                    <dt class="col-sm-3 font-weight-bold">
                        Cover
                    </dt>
                    <dd class="col-sm-9">
                        <br />
                        <img src="~/@Model.PhotoUrl" style="width:150px;" class="img-thumbnail" />

                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            @{
                if (TempData["BackButton"] is not null && TempData["BackButton"].ToString() == "Author")
                {
                    <a asp-action="ShowBooksOfAuthor" asp-controller="Author" asp-route-id="@Model.AuthorId" class="btn btn-secondary">Back</a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                }
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
