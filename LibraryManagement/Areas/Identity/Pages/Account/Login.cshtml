@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #121212; /* Dark background for the page */
        color: #e0e0e0; /* Light text color */
        font-family: 'Arial', sans-serif;
    }

    h1, h2, h3 {
        color: #e0e0e0; /* Light text color for headings */
    }

    .container {
        margin-top: 5%;
    }

    .form-floating {
        margin-bottom: 1rem; /* Space between form fields */
    }

    .form-control {
        background-color: #1e1e1e; /* Dark background for inputs */
        color: #e0e0e0; /* Light text color for inputs */
        border: 1px solid #444; /* Subtle border */
        border-radius: 8px; /* Rounded corners */
    }

        .form-control:focus {
            border-color: #555; /* Slightly lighter border on focus */
            box-shadow: none; /* Remove default focus shadow */
        }

    .form-label {
        color: black; /* Light color for labels */
    }

    .btn-primary {
        background-color: #1e1e1e; /* Dark background for buttons */
        border-color: #444; /* Matching border color */
        border-radius: 8px; /* Rounded corners */
        padding: 10px 20px; /* Cozy padding */
        transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth transition */
    }

        .btn-primary:hover {
            background-color: #333; /* Slightly darker shade on hover */
            border-color: #555; /* Darker border color on hover */
        }

        .btn-primary:focus {
            box-shadow: none; /* Remove default focus shadow */
        }

    .checkbox label {
        color: #e0e0e0; /* Light color for checkbox labels */
    }

    a {
        color: #1e90ff; /* Stylish blue color for links */
    }

        a:hover {
            color: #1c86ee; /* Darker blue on hover */
        }

    .text-danger {
        color: #ff4d4d; /* Error message color */
    }

    hr {
        border: 1px solid #444; /* Subtle horizontal rule */
    }

    .section {
        background-color: #1e1e1e; /* Dark background for sections */
        padding: 20px; /* Cozy padding */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Subtle shadow */
    }

    .offset-md-3 {
        margin-left: 25%;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <section class="section">
                <form id="account" method="post">
                    <h2>Use a local account to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
